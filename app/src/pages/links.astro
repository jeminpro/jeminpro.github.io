---
import Layout from "../layouts/BaseLayout.astro";
import fs from "fs";
import path from "path";
import yaml from "yaml";
import { marked } from "marked";

const filePath = path.resolve("./src/data/resourcesData.yaml");
const fileContents = fs.readFileSync(filePath, "utf8");
const resourcesData = yaml.parse(fileContents);

//console.log(resourcesData);
---

<Layout
	title="Links"
	description="Lorem ipsum dolor sit amet"
	isMainLarge={true}
>
	<div class="resources-list">
		{
			resourcesData.resources.map((resource) => (
				<div class="group">
					<div class="card-header">
						<h2 class="card-header-title">{resource.category}</h2>
						<div class="card-header-description">
							{resource.description}
						</div>
					</div>
					<div class="card-items">
						{resource.links.map((link) => (
							<div class="card-item">
								<h3 class="card-item-name">
									<a href={link.url} target="_blank">
										{link.name}
									</a>
								</h3>
								<div
									class="card-item-details"
									set:html={marked(link.description)}
								/>
							</div>
						))}
					</div>
				</div>
			))
		}
	</div>
</Layout>

<style>
	.resources-list {
		width: 100%;
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
	}

	.card-header-title {
		color: #fff;
		text-align: center;
		font-size: 1.5rem;
		margin: 1rem 0;
		font-weight: 600;
		font-family: "Dosis", sans-serif;
	}

	.group {
		box-shadow: 0 0.575rem 0.75rem 0.0625rem rgba(0, 0, 0, 0.18);
		margin: 1.1rem;
		width: 100%;
		min-height: 100px;
		line-height: 1.4rem;
		border-radius: 0 25px 25px 0;
		background-image: repeating-linear-gradient(
				0deg,
				rgb(250, 250, 250) 0px,
				rgb(250, 250, 250) 1px,
				transparent 1px,
				transparent 21px
			),
			repeating-linear-gradient(
				90deg,
				rgb(250, 250, 250) 0px,
				rgb(250, 250, 250) 1px,
				transparent 1px,
				transparent 21px
			),
			linear-gradient(90deg, hsl(229, 0%, 100%), hsl(229, 0%, 100%));

		.card-header {
			height: 150px;
			width: 100%;
			padding: 10px 15px;
			color: #fff;
			border-radius: 0 25px 0 0;
			font-size: 1.2rem;
			background-image: repeating-linear-gradient(
					135deg,
					hsla(46, 0%, 88%, 0.04) 0px,
					hsla(46, 0%, 88%, 0.04) 1px,
					transparent 1px,
					transparent 81px
				),
				repeating-linear-gradient(
					90deg,
					hsla(46, 0%, 88%, 0.04) 0px,
					hsla(46, 0%, 88%, 0.04) 1px,
					transparent 1px,
					transparent 81px
				),
				repeating-linear-gradient(
					90deg,
					hsla(46, 0%, 88%, 0.04) 0px,
					hsla(46, 0%, 88%, 0.04) 1px,
					transparent 1px,
					transparent 41px
				),
				repeating-linear-gradient(
					45deg,
					hsla(46, 0%, 88%, 0.04) 0px,
					hsla(46, 0%, 88%, 0.04) 1px,
					transparent 1px,
					transparent 41px
				),
				repeating-linear-gradient(
					45deg,
					hsla(46, 0%, 88%, 0.03) 0px,
					hsla(46, 0%, 88%, 0.03) 1px,
					transparent 1px,
					transparent 11px
				),
				repeating-linear-gradient(
					135deg,
					hsla(46, 0%, 88%, 0.03) 0px,
					hsla(46, 0%, 88%, 0.03) 1px,
					transparent 1px,
					transparent 11px
				),
				repeating-linear-gradient(
					90deg,
					hsla(46, 0%, 88%, 0.03) 0px,
					hsla(46, 0%, 88%, 0.03) 1px,
					transparent 1px,
					transparent 11px
				),
				linear-gradient(90deg, hsl(152, 17%, 38%), hsl(152, 17%, 38%));

			.card-header-description {
				margin: 0;
				opacity: 0.8;
			}
		}

		.card-items {
			padding: 0 10px;
			color: #6c757d;
			padding: 0 25px 0 10px;
		}

		.card-item {
			padding: 10px 0;
			border-bottom: 1px solid #e8e8e8;

			.card-item-name {
				font-size: 1.2rem;
				margin: 0.2rem 0;

				a {
					text-decoration: none;
					color: #42474c;

					&:hover {
						color: #d35244;
					}
				}
			}

			.card-item-details {
				font-size: 1rem;
				text-align: justify;

				P {
					margin-bottom: 0;
				}
			}
		}
	}

	@media screen and (min-width: 900px) {
		.group {
			width: 375px;
		}
	}
</style>

<script>
	document.querySelectorAll('.card-item-details a').forEach(anchor => anchor.setAttribute("target", "_blank"))
</script>